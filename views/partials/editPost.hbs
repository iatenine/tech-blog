<div class="post container">
  <div class="container">
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        <input
          type="text"
          class="form-control"
          id="edit-post-title"
          placeholder="title"
          value="{{post.title}}"
        />
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        <textarea class="form-control" id="edit-post-content" rows="3">
          {{post.content}}
        </textarea>
      </div>
      <button class="btn btn-primary" id="update-post-btn">Update</button>
    </form>
  </div>
</div>