<div class="post container">
  <div class="container">
    <h2>{{post.title}}</h2>
    <cite>by {{post.user.dataValues.username}}</cite>
    <p>{{post.content}}</p>
    <p>{{post.updatedAt}}</p>
  </div>
  {{#if post.comments}}
    <h3>Comments</h3>
    <hr />
    {{#each post.comments}}
      <div class="comment">
        <p>{{this.dataValues.user.dataValues.username}}</p>
        <p>{{this.dataValues.content}}</p>
        <p>{{this.dataValues.createdAt}}</p>
      </div>
      <hr />
    {{/each}}
  {{/if}}
</div>

